FUNCTION ExistDir(Path: PathStr): Boolean;
VAR
  DirInfo: SearchRec;
  CurDir: PathStr;
BEGIN
  Path := AllCaps(BSlash(Path,FALSE));
  IF (Path = '') OR (NOT (Path[1] IN ['A'..'Z'])) OR (Pos(':',Path) <> 2) OR (Length(Path) = 2) THEN
  BEGIN
    NL;
    Print('Invalid drive, path or path is empty: '+Path);
    PauseScr(FALSE);
    ExistDir := TRUE
  END
  ELSE
  BEGIN
    GetDir(0,CurDir);
    ChDir(Path[1]+':');
    IF (IOResult <> 0) THEN
    BEGIN
      NL;
      Print('Drive "'+Path[1]+':\" does not exist.');
      PauseScr(FALSE);
      ExistDir := TRUE
    END
    ELSE
    BEGIN
      ChDir(CurDir);
      FindFirst(Path,AnyFile,DirInfo);
      ExistDir := (DOSError = 0) AND (DirInfo.Attr AND $10 = $10);
    END;
  END;
END;

PROCEDURE PrintFile(FN: AStr);
VAR
  s: AStr;
  dayofweek: Byte;
  i: Integer;
BEGIN
  FN := AllCaps(FN);
  s := FN;
  IF (Copy(FN,Length(FN) - 3,4) = '.ANS') THEN
  BEGIN
    IF (Exist(Copy(FN,1,Length(FN) - 4)+'.AN1')) THEN
      REPEAT
        i := Random(10);
        IF (i = 0) THEN
          FN := Copy(FN,1,Length(FN) - 4)+'.ANS'
        ELSE
          FN := Copy(FN,1,Length(FN) - 4)+'.AN'+IntToStr(i);
      UNTIL (Exist(FN));
  END
  ELSE IF (Copy(FN,Length(FN) - 3,4) = '.AVT') THEN
  BEGIN
    IF (Exist(Copy(FN,1,Length(FN)-4)+'.AV1')) THEN
      REPEAT
        i := Random(10);
        IF (i = 0) THEN
          FN := Copy(FN,1,Length(FN) - 4)+'.AVT'
        ELSE
          FN := Copy(FN,1,Length(FN)-4)+'.AV'+IntToStr(i);
      UNTIL (Exist(FN));
  END
  ELSE IF (Copy(FN,Length(FN) - 3,4) = '.RIP') THEN
  BEGIN
    IF (Exist(Copy(FN,1,Length(FN)-4)+'.RI1')) THEN
      REPEAT
        i := Random(10);
        IF (i = 0) THEN
          FN := Copy(FN,1,Length(FN)-4)+'.RIP'
        ELSE
          FN := Copy(FN,1,Length(FN)-4)+'.RI'+IntToStr(i);
      UNTIL (Exist(FN));
    END;
  GetDayOfWeek(DayOfWeek);
  s := FN;
  s[Length(s) - 1] := Chr(DayOfWeek + 48);
  IF (Exist(s)) THEN
    FN := s;
  pfl(FN);
END;

PROCEDURE PrintF(FN: AStr);
VAR
  FFN,
  Path: PathStr;
  Name: NameStr;
  Ext: ExtStr;

  j: Integer;  (* doesn't seem to do anything *)

BEGIN
  NoFile := TRUE;
  FN := SQOutSp(FN);
  IF (FN = '') THEN
    Exit;

  IF (Pos('\',FN) <> 0) THEN    (* ??? *)
    j := 1
  ELSE
  BEGIN
    j := 2;
    FSplit(FExpand(FN),Path,Name,Ext);
    IF (NOT Exist(General.MiscPath+Name+'.*')) THEN
      Exit;
  END;

  FFN := FN;
  IF ((Pos('\',FN) = 0) AND (Pos(':',FN) = 0)) THEN
    FFN := General.MiscPath+FFN;
  FFN := FExpand(FFN);
  IF (Pos('.',FN) <> 0) THEN
    PrintFile(FFN)
  ELSE
  BEGIN
    IF (OkRIP) AND Exist(FFN+'.RIP') THEN
      PrintFile(FFN+'.RIP');
    IF (NoFile) AND (OkAvatar) AND Exist(FFN+'.AVT') THEN
      PrintFile(FFN+'.AVT');
    IF (NoFile) AND (OkANSI) AND Exist(FFN+'.ANS') THEN
      PrintFile(FFN+'.ANS');
    IF (NoFile) AND (Exist(FFN+'.ASC')) THEN
      PrintFile(FFN+'.ASC');
  END;
END;

FUNCTION decode(CONST X: AStr; check: Byte): STRING;
VAR
  s: AStr;
  b,t: Byte;
BEGIN
  s := '';
  t := 0;
  FOR b := 1 TO Length(X) DO
  BEGIN
    s := s+Chr(Ord(X[b]) - Ord(X[b-1]));
    Inc(t,Ord(s[b]));
  END;
  IF (t XOR check = 0) THEN
    DieLater := TRUE;
  decode := s;
END;

