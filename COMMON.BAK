PROCEDURE Com_Send_Str(CONST S: AStr);
VAR
  Counter: Byte;
BEGIN
  FOR Counter := 1 TO Length(S) DO
    CASE S[Counter] OF
      '~' : Delay(250);
      '|' : BEGIN
              Com_Send(^M);
              IF (InWFCMenu) THEN
                WriteWFC(^M);
            END;
      '^' : BEGIN
              DTR(FALSE);
              Delay(250);
              DTR(TRUE);
            END;
    ELSE
    BEGIN
      Com_Send(S[Counter]);
      Delay(2);
      IF (InWFCMenu) THEN
        WriteWFC(S[Counter]);
    END;
  END;
END;

