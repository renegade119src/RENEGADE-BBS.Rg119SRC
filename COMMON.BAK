FUNCTION StripColor(CONST o:STRING):STRING;
VAR
  i,j:Byte;
  s:STRING;
BEGIN
  i:=0;
  s:='';
  WHILE i < Length(o) DO BEGIN
        Inc(i);
        CASE o[i] OF

          ^S : Inc(i);{IF ^S THEN skip over it.}
         '^' : IF (o[i+1] IN ['0'..'9']) THEN Inc(i)
               ELSE s := s+'^';
         '|' : IF (o[i + 1] IN ['0'..'9']) AND (o[i + 2] IN ['0'..'9']) THEN BEGIN
                  Inc(i,2);
                  Inc(j,2);
               END
               ELSE s:=s+'|';
        ELSE s:=s+o[i];
        END;
  END;
  StripColor:=s;
END;

